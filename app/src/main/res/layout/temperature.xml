<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/temperature_day"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/min_margin"
        android:layout_marginTop="@dimen/min_margin_top"
        android:layout_weight=".20"
        android:text="00 XXX"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temperature_date"
        android:layout_width="0sp"
        android:layout_weight=".15"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/min_margin"
        android:layout_marginTop="@dimen/min_margin_top"
        android:text="12:15" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="0sp"
        android:layout_weight=".20"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/min_margin"
        android:layout_marginTop="@dimen/min_margin_top"
        android:textAlignment="textEnd"
        android:gravity="center_vertical|end"
        android:text="200.00 xC" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="0sp"
        android:layout_weight=".20"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/min_margin"
        android:layout_marginTop="@dimen/min_margin_top"
        android:textAlignment="textEnd"
        android:gravity="center_vertical|end"
        android:text="200.00 xC" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="0sp"
        android:layout_weight=".20"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/min_margin"
        android:layout_marginTop="@dimen/min_margin_top"
        android:textAlignment="textEnd"
        android:gravity="center_vertical|end"
        android:text="200.00 xC" />

    <!--<TextView-->
        <!--android:id="@+id/temperature_weather"-->
        <!--android:layout_width="0sp"-->
        <!--android:layout_weight=".35"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/text_margin"-->
        <!--android:visibility="gone"-->
        <!--android:gravity="center_vertical|end"-->
        <!--android:text="rain" />-->

    <ImageView
        android:id="@+id/temperature_icon"
        android:layout_width="0sp"
        android:layout_weight=".15"
        android:layout_height="32sp"
        android:gravity="center_vertical|end"
        />
</LinearLayout>